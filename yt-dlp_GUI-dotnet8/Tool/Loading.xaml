<Window
    x:Class="yt_dlp_GUI_dotnet8.Tool.Loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:yt_dlp_GUI_dotnet8.Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="450"
    Height="400"
    MaxWidth="450"
    MaxHeight="400"
    AllowsTransparency="True"
    Background="DimGray"
    SourceInitialized="Window_SourceInitialized"
    Topmost="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Label
            x:Name="downloadRead"
            Width="360"
            Height="27"
            Margin="0,19,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="ロード中"
            FontSize="15" />
        <ProgressBar
            x:Name="Bar"
            Height="30"
            Margin="45,51,45,303"
            Foreground="GreenYellow" />
        <Wpf:WebView2 Margin="45,100,45,10" Source="https://toaru-web.net/ad.html" ScrollViewer.CanContentScroll="False" ScrollViewer.IsDeferredScrollingEnabled="False"/>
    </Grid>
</Window>
