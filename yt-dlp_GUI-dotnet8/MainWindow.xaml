<Window
    x:Class="yt_dlp_GUI_dotnet8.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:yt_dlp_GUI_dotnet8"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AllVideoDownloader(仮）"
    Width="582"
    MinWidth="1024"
    MinHeight="765"
    Background="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <TabControl
        materialDesign:ColorZoneAssist.Mode="Standard"
        materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
        materialDesign:ShadowAssist.ShadowDepth="Depth0"
        BorderBrush="Transparent"
        BorderThickness="0"
        SnapsToDevicePixels="True"
        Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
        TabStripPlacement="Left">
        <materialDesign:NavigationRailAssist.FloatingContent>
            <Button
                Margin="8"
                Click="Start_Click"
                Content="{materialDesign:PackIcon Kind=CloudDownload}"
                Style="{StaticResource MaterialDesignFloatingActionAccentButton}" />
        </materialDesign:NavigationRailAssist.FloatingContent>
        <TabItem>
            <TabItem.Header>
                <StackPanel Width="auto" Height="auto">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="Download" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Download" />
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Button
                    Name="Clear"
                    Width="128"
                    Height="32"
                    Margin="146,0,0,19"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Clear_Click"
                    Content="Clear" />
                <Button
                    Name="AddUrlList"
                    Width="128"
                    Height="32"
                    Margin="410,0,0,19"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Add_Url_List"
                    Content="URLを追加" />
                <Button
                    Name="cl"
                    Width="127"
                    Height="32"
                    Margin="16,0,0,19"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="cancel_Click"
                    Content="Cancel" />
                <ListView
                    Name="list"
                    Margin="0,56,0,56"
                    IsEnabled="True">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding name}" Header="Title" />
                            <GridViewColumn DisplayMemberBinding="{Binding url}" Header="URL" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <ProgressBar
                    Name="prog"
                    Height="4"
                    Margin="10,0,10,10"
                    VerticalAlignment="Bottom"
                    IsEnabled="True"
                    Maximum="1"
                    Minimum="0.01"
                    ValueChanged="prog_ValueChanged" />
                <Button
                    x:Name="Go"
                    Width="128"
                    Height="32"
                    Margin="278,0,0,19"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Click="Start_Click"
                    Content="Let's Go" />
                <Label
                    Name="progText"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Download States"
                    FontSize="30" />
            </Grid>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Width="auto" Height="auto">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="ClockOutline" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Recent" />
                </StackPanel>
            </TabItem.Header>
            <Grid Width="Auto" Height="Auto">
                <ListView
                    x:Name="listView_Recent"
                    Margin="10,165,10,10"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="200" Header="Cover">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="200"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Source="{Binding image}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Title" />
                            <GridViewColumn DisplayMemberBinding="{Binding Page}" Header="Page" />
                            <GridViewColumn
                                Width="300"
                                DisplayMemberBinding="{Binding URI}"
                                Header="URL" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button
                    Width="106"
                    Height="74"
                    Margin="10,86,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Clear" />
            </Grid>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Width="auto" Height="auto">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="Web" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Browser" />
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <materialDesign:ColorZone Padding="16" Mode="PrimaryMid">
                    <DockPanel>
                        <StackPanel materialDesign:RippleAssist.IsCentered="True" Orientation="Horizontal">
                            <materialDesign:ColorZone
                                Width="352"
                                Margin="16,0,0,0"
                                Padding="8,4,8,4"
                                Panel.ZIndex="1"
                                materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                CornerRadius="2"
                                Mode="Standard">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button Click="Search_Clicked" Style="{DynamicResource MaterialDesignToolButton}">
                                        <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                                    </Button>
                                    <TextBox
                                        Name="SearchBox"
                                        Grid.Column="1"
                                        MinWidth="200"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="既定の検索エンジンで検索するか、URLを入力してください"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        BorderThickness="0" />
                                    <Button Grid.Column="2" Style="{DynamicResource MaterialDesignToolButton}" />
                                </Grid>
                            </materialDesign:ColorZone>
                            <Button
                                Margin="8,0,0,0"
                                Panel.ZIndex="0"
                                Click="Search_Clicked"
                                Style="{DynamicResource MaterialDesignToolForegroundButton}">
                                <materialDesign:PackIcon Kind="SearchWeb" />
                            </Button>
                            <Button
                                x:Name="left"
                                Margin="9,0,0,0"
                                Click="left_Click">
                                <materialDesign:PackIcon Kind="ArrowLeft" />
                            </Button>
                            <Button
                                x:Name="reload"
                                Margin="9,0,0,0"
                                Click="reload_Click">
                                <materialDesign:PackIcon Kind="Reload" />
                            </Button>
                            <Button
                                x:Name="right"
                                Margin="9,0,0,0"
                                Click="right_Click">
                                <materialDesign:PackIcon Kind="ArrowRight" />
                            </Button>
                            <materialDesign:Badged Badge="{materialDesign:PackIcon Kind=Download}" BadgeColorZoneMode="SecondaryMid">
                                <Button
                                    Name="download"
                                    Margin="9,5,0,0"
                                    Click="download_Click_1"
                                    Content="DLリストに追加"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
                            </materialDesign:Badged>
                        </StackPanel>
                    </DockPanel>
                </materialDesign:ColorZone>
                <Wpf:WebView2 x:Name="webview" Margin="0,72,0,0" />
            </Grid>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Width="auto" Height="auto">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="Info" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Infomation" />
                </StackPanel>
            </TabItem.Header>
            <ScrollViewer>
                <Grid>
                <StackPanel
                    Name="StackPanel_Info"
                    Width="Auto"
                    Height="Auto">
                    <materialDesign:ColorZone
                        Width="336"
                        Height="46"
                        Mode="Light">
                        <Grid
                            Name="searchFore"
                            Width="336"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="SearchBox_Info"
                                Grid.Column="1"
                                MinWidth="200"
                                Margin="8,0,33,0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="URLを入力してください"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0" />
                            <Button
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="303,-3,0,0"
                                Click="Info_Search"
                                Style="{DynamicResource MaterialDesignToolButton}">
                                <materialDesign:PackIcon
                                    Width="23"
                                    Height="22"
                                    Kind="Search"
                                    Opacity=".56" />
                            </Button>
                        </Grid>
                    </materialDesign:ColorZone>
                    <Grid Height="403" Background="Gray">
                        <GroupBox
                            Name="VideoTitle"
                            Width="592"
                            Margin="0,16,0,10"
                            HorizontalAlignment="Center"
                            Header="サムネイル"
                            Style="{DynamicResource MaterialDesignCardGroupBox}">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="32"
                                            Height="32"
                                            VerticalAlignment="Center"
                                            Kind="ImageArea" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                            Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <Image
                                Name="thumbPic"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="muhu.jpg" />
                        </GroupBox>
                    </Grid>
                    <GroupBox Margin="16" Header="Infomation">
                        <TextBox
                            Name="VidInfo"
                            MaxHeight="300"
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="むふー" />
                    </GroupBox>
                        <GroupBox Margin="16" Header="なにか">
                            <TextBox
                            Name="nanika"
                            MaxHeight="300"
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Text="None" />
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <StackPanel Width="auto" Height="auto">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Kind="Settings" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="Settings" />
                </StackPanel>
            </TabItem.Header>
            <StackPanel>
                <Grid Height="56">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="yt-dlp関連の設定"
                        FontSize="30"
                        FontStyle="Italic" />
                </Grid>
                <Grid Height="56">
                    <Label
                        Width="151"
                        Margin="34,16,0,12"
                        HorizontalAlignment="Left"
                        Content="YouTubeのクッキーを使用する" />
                    <ToggleButton
                        Name="cookie"
                        Width="34"
                        Margin="0,2,0,-2"
                        HorizontalAlignment="Left"
                        IsChecked="False"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                        ToggleButton.Checked="cookie_Checked"
                        ToggleButton.Unchecked="cookie_Unchecked"
                        ToolTip="MaterialDesignSwitchLightToggleButton" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Margin="190,14,297,10"
                        materialDesign:HintAssist.Hint="Cookie"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        IsEnabled="False" />
                    <Button
                        Name="Cookies"
                        Width="116"
                        Margin="0,14,148,10"
                        HorizontalAlignment="Right"
                        Click="Cookies_Clicked_Click"
                        Content="保存"
                        IsEnabled="False" />
                </Grid>
                <Grid Height="56">
                    <Label
                        Width="151"
                        Margin="34,16,0,12"
                        HorizontalAlignment="Left"
                        Content="指定した解像度を強制する" />
                    <ToggleButton
                        x:Name="SetPixel"
                        Width="34"
                        Margin="0,2,0,-2"
                        HorizontalAlignment="Left"
                        Checked="SetPixel_Checked"
                        IsChecked="False"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                        ToolTip="MaterialDesignSwitchLightToggleButton"
                        Unchecked="SetPixel_Unchecked" />
                    <ComboBox
                        Name="combo"
                        Margin="190,14,297,10"
                        materialDesign:HintAssist.Hint="解像度"
                        DropDownClosed="combo_DropDownClosed"
                        IsEnabled="False">
                        <ComboBoxItem Content="144p" />
                        <ComboBoxItem Content="240p" />
                        <ComboBoxItem Content="360p" />
                        <ComboBoxItem Content="480p" />
                        <ComboBoxItem Content="720p" />
                        <ComboBoxItem Content="1080p" />
                        <ComboBoxItem Content="1440p" />
                        <ComboBoxItem Content="2160p" />
                        <ComboBoxItem Content="7680p" />
                    </ComboBox>
                </Grid>
                <Grid Height="56">
                    <Label
                        Width="151"
                        Margin="34,16,0,12"
                        HorizontalAlignment="Left"
                        Content="指定したコーディックを強制する" />
                    <ToggleButton
                        x:Name="CodecToggle"
                        Width="34"
                        Margin="0,2,0,-2"
                        HorizontalAlignment="Left"
                        Checked="CodecToggle_Checked"
                        IsChecked="False"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                        ToolTip="MaterialDesignSwitchLightToggleButton"
                        Unchecked="CodecToggle_Unchecked" />
                    <ComboBox
                        Name="codec"
                        Margin="190,14,297,10"
                        materialDesign:HintAssist.Hint="コーディック"
                        DropDownClosed="codec_DropDownClosed"
                        IsEnabled="False">
                        <ComboBoxItem Content="H264" />
                        <ComboBoxItem Content="H265" />
                        <ComboBoxItem Content="VP9" />
                        <ComboBoxItem Content="AV1" />
                    </ComboBox>
                </Grid>
                <Grid Height="56">
                    <Label
                        Width="151"
                        Margin="34,16,0,12"
                        HorizontalAlignment="Left"
                        Content="指定したオーディオコーディックを強制する" />
                    <ToggleButton
                        x:Name="Codec_Audio_Toggle"
                        Width="34"
                        Margin="0,2,0,-2"
                        HorizontalAlignment="Left"
                        Checked="Codec_Audio_Toggle_Checked"
                        IsChecked="False"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                        ToolTip="MaterialDesignSwitchLightToggleButton"
                        Unchecked="Codec_Audio_Toggle_Unchecked" />
                    <ComboBox
                        Name="codec_Audio"
                        Margin="190,14,297,10"
                        materialDesign:HintAssist.Hint="オーディオコーディック"
                        DropDownClosed="codec_Audio_DropDownClosed"
                        IsEnabled="False">
                        <ComboBoxItem Content="MP3" />
                        <ComboBoxItem Content="AAC" />
                        <ComboBoxItem Content="FLAC" />
                    </ComboBox>
                </Grid>
                <Grid Height="56">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="~関連の設定"
                        FontSize="30"
                        FontStyle="Italic" />
                </Grid>
            </StackPanel>
        </TabItem>
    </TabControl>

</Window>
